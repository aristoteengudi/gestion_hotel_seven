<table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
    <tr>
        <th>#id</th>
        <th>Noms</th>
        <th>Téléphone</th>
        <th>Numéro Pièce Identité</th>
        <th>Genre</th>
    </tr>
    </thead>

    <tbody>
    {% if filter_data|length > 0 %}
        {% for value in filter_data %}
            <tr>
                <td>{{ value.id }}</td>
                <td>{{ value.numero_chambre }}</td>
                <td>{{ value.etat_disponibilite }}</td>
                <td>{{ value.categorie }}</td>
                <td>{{ value.cout }}</td>
            </tr>

        {% endfor %}
    {% else %}
        {% for value in customers %}
            <tr>
                <td>{{ value.id }}</td>
                <td>{{ value.noms }} {{ value.prenom }}</td>
                <td>{{ value.telephone }}</td>
                <td>{{ value.numero_piece }}</td>
                <td>{{ value.genre }}</td>
            </tr>
        {% endfor %}

    {% endif %}

    </tbody>
</table>


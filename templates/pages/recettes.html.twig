{% extends 'base_layout.html.twig' %}
{% block title %}{{ page_title }}{% endblock %}

{% block content %}
    {% set flash = session.flash_message %}

    {% if flash.string == 'success' %}
        <div class="col-lg-12">
            <div class="alert alert-success bg-success text-white" role="alert">
                <strong>Well done!</strong> {{ flash.message }}.
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form action="reservations">
                        <input type="hidden" name="r" value="filter">
                        <div class="form-row">
                            <div class="input-daterange input-group" id="date-range">
                                <div class="col-md-2 mb-2">
                                    <label for="month">Mois</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="mm/dd/yyyy" id="month">
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="mdi mdi-calendar"></i></span>
                                        </div>
                                    </div>
                                </div>

{#
                                <div class="col-md-2 mb-2">
                                    <label for="inputEnd">Type Recettes</label>
                                    <div class="input-group">
                                        <select class="form-control" name="room_status" id="" required>
                                            <option value=""></option>
                                            <option value="daily">Journali√®re</option>
                                            <option value="monthly">Mensuel</option>
                                        </select>
                                    </div>
                                </div>
#}


                                <div class="col-md-3 mb-3">
                                    <label for="inputEnd">&nbsp;</label>
                                    <div class="input-group">
                                        <button class="btn btn-outline-secondary waves-effect" type="submit">Filtrer <i class="fas fa-filter"></i></button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </form>
                    <h4 class="mt-0 header-title"></h4>
                    {% include 'partial/recettes_view.twig' %}
                </div>
            </div>
        </div> <!-- end col -->
    </div> <!-- end row -->

    {{ unset_flash() }}

{% endblock %}


